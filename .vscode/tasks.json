{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run",
			"command": "/bin/bash",
			"args": [
				"-c",
				"cmake ../ && make && ./http-request-cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}